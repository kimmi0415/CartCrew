<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"> <!-- Center contents vertically -->

    <!-- TextView to show the signed-in email -->
    <TextView
        android:id="@+id/textViewSignedIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signed in as: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="16dp"
        android:textColor="#000" />

    <!-- Existing buttons for adding items, viewing list, etc. -->
    <Button
        android:id="@+id/buttonViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Shopping List" />

    <Button
        android:id="@+id/buttonViewBasket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Basket" />

    <Button
        android:id="@+id/buttonViewRecentPurchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Recent Purchases" />

    <!-- Add the Logout button here -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
